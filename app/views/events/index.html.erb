<div class="page-header">
  <h1>
    Events
  </h1>
  <h2><a href="/events/new" class="btn btn-lg btn-success">New Event</a></h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Time</th>
        <th>Number of Tickets</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <% if event.date > Date.today + 1 %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date.strftime("%v") %></td>
          <td><%= event.time.strftime("%H:%M:%p") %></td>
          <td><%= event.tickets.count %></td>
          <td>
            <a href="/events/<%= event.id %>" class="btn btn-default">Show</a>
            <!-- <a href="/events/<%= event.id %>/edit" class="btn btn-default">Edit</a>
            <a href="/delete_event/<%= event.id %>" class="btn btn-default" rel="nofollow">Delete</a> -->
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
  <div class="page-footer">

  </div>
</div>
