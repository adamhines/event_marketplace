<div class="page-header">
  <h1>
    My Tickets

  </h1>
</div>

<div class="row">
  <div class="col-md-12">

<% if Ticket.where(:user_id => current_user.id).count == 0 %>
  <h3>
    You have no tickets
  </h3>
<% else %>
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.price %></td>
        <td>  
          <a href="/tickets/<%= ticket.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_ticket/<%= ticket.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <% end %>
  </div>
</div>
