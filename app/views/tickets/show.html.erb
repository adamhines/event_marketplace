<div class="page-header">
  <h3>Ticket #<%= @ticket.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Event</dt>
      <dd><%= @ticket.event_id %></dd>

      <dt>User</dt>
      <dd><%= @ticket.user_id %></dd>

      <dt>Title</dt>
      <dd><%= @ticket.title %></dd>

      <dt>Description</dt>
      <dd><%= @ticket.description %></dd>

      <dt>Price</dt>
      <dd><%= @ticket.price %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tickets" class="btn btn-primary">
        Back
      </a>
      <a href="/tickets/<%= @ticket.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_ticket/<%= @ticket.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
